<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.hm.cs.vadere.seating.datacollection">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:name=".SeatingDataCollectionApp"
        >
        <activity
            android:name=".StartSurveyActivity"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InitCollectionActivity"
            android:label="@string/app_name"
            android:parentActivityName=".StartSurveyActivity"
            >
        </activity>
        <activity
            android:name=".CollectDataActivity"
            android:label="@string/app_name"
            android:parentActivityName=".InitCollectionActivity"
            >
        </activity>


        <meta-data android:name="DATABASE" android:value="data.db" />
        <meta-data android:name="VERSION" android:value="1" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="edu.hm.cs.vadere.seating.datacollection.model" />
        <!--
        -->
        <meta-data android:name="QUERY_LOG" android:value="true" />
    </application>

</manifest>